<Window x:Class="weather_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weather_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1st column -->
        <Border Background="AliceBlue" CornerRadius="10,0,0,10" Grid.Column="0"/>
        <Button Content="Refresh Data" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Grid.Column="0" Style="{StaticResource ButtonStyle}" Click="Refresh_Data_Click"/>
        <Button Content="Button2" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Grid.Column="0" Style="{StaticResource ButtonStyle}"/>

        <!-- 2nd column -->
        <Border Background="LightSteelBlue" CornerRadius="0,10,10,0" Grid.Column="1"/>

    </Grid>
</Window>
